const Report = require('../Models/ReportSchema');
const mongoose = require('mongoose')


//inserting a new report will be used by user
const addReport= async (req, res) => {
    const {type, problem,userID,course, courseid} = req.body
    console.log(userName)
    try {
        const report = await Report.create({ problem,type, userID, course, courseid })
        res.status(200).json(report)
      } catch (error) {
        res.status(400).json({ error: error.message })
      }
  
}

const setStatus= async (req, res) => {

  const {id, newStatus} = req.body;
  const report = await Report.findOneAndUpdate({_id: id}, { $set :{status: newStatus}
  })

  if (!report) {
    res.status(400).json({error: 'No such report'})
  }

  res.status(200).json(report)
}

// get all reports for the admin
const getReports = async (req, res) => {
    const reports = await Report.find({}).sort({createdAt: -1})
  
    res.status(200).json(reports)}

const getMyReports = async (req, res)=>{
  const {id}= req.body
  const reports = await Report.findById(id)
  res.status(200).json(reports)
}



module.exports = {
    addReport,
    getReports,
    setStatus,
    getMyReports
  }
